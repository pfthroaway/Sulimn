                            <TextBlock x:Name="lblSelectedRingValue" Grid.Row="2" Text="{Binding Path=ValueToStringWithText}" Margin="5" />
                            <TextBlock x:Name="lblSelectedRingSellable" Grid.Row="3" Text="{Binding Path=CanSellToString}" Margin="5" />
                            <TextBlock x:Name="lblSelectedRingDescription" Grid.Row="4" Height="67" Text="{Binding Path=Description}" TextWrapping="Wrap" Margin="5" />
                            <Grid Grid.Row="5" HorizontalAlignment="Center"  VerticalAlignment="Bottom">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Button x:Name="btnEquipSelectedRingLeft" Grid.Column="0" Grid.Row="0" Content="_Equip Left" Width="110" Height="30" Margin="5" Click="btnEquipSelectedRingLeft_Click" IsEnabled="False" />
                                <Button x:Name="btnEquipSelectedRingRight" Grid.Column="1" Grid.Row="0" Content="_Equip Right" Width="110" Height="30" Margin="5" Click="btnEquipSelectedRingRight_Click" IsEnabled="False" />
                                <Button x:Name="btnDropSelectedRing" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Content="_Drop" Width="100" Height="30" Margin="5" Click="btnDropSelectedRing_Click" IsEnabled="False" />
                            </Grid>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="Potions" Padding="10,5">
                <Grid HorizontalAlignment="Right">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <GroupBox Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Header="Inventory" Margin="5">
                        <ListBox x:Name="lstPotionInventory" Width="265" Height="300"  ItemsSource="{Binding}" SelectionChanged="lstPotionInventory_SelectionChanged" ScrollViewer.VerticalScrollBarVisibility="Visible" Margin="5" />
                    </GroupBox>
                    <GroupBox Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="270" Height="340" Header="Selected Potion" Margin="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <TextBlock x:Name="lblSelectedPotion" Grid.Row="0" Width="250" Text="{Binding Path=Name}" Margin="5" />
                            <TextBlock x:Name="lblSelectedPotionTypeAmount" Grid.Row="1" Width="250" Text="{Binding Path=TypeAmount}" Margin="5" />
                            <TextBlock x:Name="lblSelectedPotionValue" Grid.Row="2" Text="{Binding Path=ValueToStringWithText}" Margin="5" />
                            <TextBlock x:Name="lblSelectedPotionSellable" Grid.Row="3" Text="{Binding Path=CanSellToString}" Margin="5" />
                            <TextBlock x:Name="lblSelectedPotionDescription" Grid.Row="4" Height="67" Text="{Binding Path=Description}" TextWrapping="Wrap" Margin="5" />
                            <StackPanel Grid.Row="5" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                                <Button x:Name="btnConsumeSelectedPotion" Content="_Consume" Width="100" Height="30" Click="btnConsumeSelectedPotion_Click" IsEnabled="False" Margin="5" />
                                <Button x:Name="btnDropSelectedPotion" Content="_Drop" Width="100" Height="30"  Click="btnDropSelectedPotion_Click" IsEnabled="False" Margin="5" />
                            </StackPanel>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="Food" Padding="10,5">
                <Grid HorizontalAlignment="Right">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <GroupBox Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Header="Inventory" Margin="5">
                        <ListBox x:Name="lstFoodInventory" Width="265" Height="300"  ItemsSource="{Binding}" SelectionChanged="lstFoodInventory_SelectionChanged" ScrollViewer.VerticalScrollBarVisibility="Visible" Margin="5" />
                    </GroupBox>
                    <GroupBox Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="270" Height="340" Header="Selected Food" Margin="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <TextBlock x:Name="lblSelectedFood" Grid.Row="0" Width="250" Text="{Binding Path=Name}" Margin="5" />
                            <TextBlock x:Name="lblSelectedFoodTypeAmount" Grid.Row="1" Width="250" Text="{Binding Path=TypeAmount}" Margin="5" />
                            <TextBlock x:Name="lblSelectedFoodValue" Grid.Row="2" Text="{Binding Path=ValueToStringWithText}" Margin="5" />
                            <TextBlock x:Name="lblSelectedFoodSellable" Grid.Row="3" Text="{Binding Path=CanSellToString}" Margin="5" />
                            <TextBlock x:Name="lblSelectedFoodDescription" Grid.Row="4" Height="67" Text="{Binding Path=Description}" TextWrapping="Wrap" Margin="5" />
                            <StackPanel Grid.Row="5" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                                <Button x:Name="btnConsumeSelectedFood" Content="_Consume" Width="100" Height="30" Click="btnConsumeSelectedFood_Click" IsEnabled="False" Margin="5" />
                                <Button x:Name="btnDropSelectedFood" Content="_Drop" Width="100" Height="30" Click="btnDropSelectedFood_Click" IsEnabled="False" Margin="5" />
                            </StackPanel>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
        </TabControl>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Column="0" Grid.Row="1" Margin="0,0,0,10">
            <TextBlock x:Name="lblHealth" Width="281" Text="{Binding Path=HealthToStringWithText}" TextAlignment="Center" Margin="0,0,10,0" />
            <TextBlock x:Name="lblMagic" Width="281" Text="{Binding Path=MagicToStringWithText}" TextAlignment="Center" Margin="0,0,10,0" />
            <TextBlock x:Name="lblGold" Width="281" Text="{Binding Path=GoldToStringWithText}" TextAlignment="Center" />
        </StackPanel>
        <TextBox x:Name="txtInventory" Grid.Row="2" Margin="0,0,0,10" Height="120" Width="863" IsReadOnly="True" TextWrapping="Wrap" ScrollViewer.VerticalScrollBarVisibility="Visible" Padding="5" />
        <Button x:Name="btnBack" Grid.Row="3" Width="125" Height="30" Content="_Back" Click="btnBack_Click" Margin="10,0,0,0" IsCancel="True" />
    </Grid>
</Window>