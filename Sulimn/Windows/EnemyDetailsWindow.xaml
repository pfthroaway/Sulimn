<Window x:Name="windowEnemyDetails" x:Class="Sulimn_WPF.EnemyDetailsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Sulimn_WPF"
    mc:Ignorable="d"
    Title="Enemy Details" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" FontFamily="Segoe UI Semibold" FontSize="17" Closing="windowEnemyDetails_Closing" Icon="S.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Border Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" BorderThickness="1,1,1,0" BorderBrush="Black" Margin="10,10,10,0">
            <TextBlock x:Name="lblName" Width="211" Margin="5" TextAlignment="Center" Text="{Binding Path=Name, Mode=TwoWay}" VerticalAlignment="Center" />
        </Border>
        <Border Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" BorderThickness="1,1,1,0" BorderBrush="Black" Margin="10,0,10,0">
            <TextBlock x:Name="lblLevel" Width="211" Margin="5" TextAlignment="Center" Text="{Binding Path=LevelToString, Mode=OneWay}" VerticalAlignment="Center" />
        </Border>
        <Border Grid.Column="0" Grid.Row="2" BorderThickness="1,1,0,0" BorderBrush="Black" Margin="10,0,0,0">
            <TextBlock Margin="5" Width="100" TextAlignment="Center" Text="Experience" VerticalAlignment="Center" />
        </Border>
        <Border Grid.Column="1" Grid.Row="2" BorderThickness="1,1,1,0" BorderBrush="Black" Margin="0,0,10,0">
            <TextBlock x:Name="lblExperience" Margin="5" Width="100" TextAlignment="Center" Text="{Binding Path=Experience, Mode=TwoWay}" VerticalAlignment="Center" />
        </Border>
        <Border Grid.Column="0" Grid.Row="3" BorderThickness="1,1,0,0" BorderBrush="Black" Margin="10,0,0,0">
            <TextBlock Margin="5" Width="100" TextAlignment="Center" Text="Strength" VerticalAlignment="Center" />
        </Border>
        <Border Grid.Column="1" Grid.Row="3" BorderThickness="1,1,1,0" BorderBrush="Black" Margin="0,0,10,0">
            <TextBlock x:Name="lblStrength" Width="100" Margin="5" TextAlignment="Center" Text="{Binding Path=Strength, Mode=TwoWay}" VerticalAlignment="Center" />
        </Border>
        <Border Grid.Column="0" Grid.Row="4" BorderThickness="1,1,0,0" BorderBrush="Black" Margin="10,0,0,0">
            <TextBlock Margin="5" Width="100" TextAlignment="Center" Text="Vitality" VerticalAlignment="Center" />
        </Border>
        <Border Grid.Column="1" Grid.Row="4" BorderThickness="1,1,1,0" BorderBrush="Black" Margin="0,0,10,0">
            <TextBlock x:Name="lblVitality" Width="100" Margin="5" TextAlignment="Center" Text="{Binding Path=Vitality, Mode=TwoWay}" VerticalAlignment="Center" />
        </Border>
        <Border Grid.Column="0" Grid.Row="5" BorderThickness="1,1,0,0" BorderBrush="Black" Margin="10,0,0,0">
            <TextBlock Width="100" Margin="5" TextAlignment="Center" Text="Dexterity" VerticalAlignment="Center" />
        </Border>
        <Border Grid.Column="1" Grid.Row="5" BorderThickness="1,1,1,0" BorderBrush="Black" Margin="0,0,10,0">
            <TextBlock x:Name="lblDexterity" Width="100" Margin="5" TextAlignment="Center" Text="{Binding Path=Dexterity, Mode=TwoWay}" VerticalAlignment="Center" />
        </Border>
        <Border Grid.Column="0" Grid.Row="6" BorderThickness="1,1,0,0" BorderBrush="Black" Margin="10,0,0,0">
            <TextBlock Width="100" Margin="5" TextAlignment="Center" Text="Health" VerticalAlignment="Center" />
        </Border>
        <Border Grid.Column="1" Grid.Row="6" BorderThickness="1,1,1,0" BorderBrush="Black" Margin="0,0,10,0">
            <TextBlock x:Name="lblHealth" Width="100" Margin="5" TextAlignment="Center" Text="{Binding Path=HealthToString, Mode=OneWay}" VerticalAlignment="Center" />
        </Border>
        <Border Grid.Column="0" Grid.Row="7" BorderThickness="1,1,0,1" BorderBrush="Black" Margin="10,0,0,10">
            <TextBlock Width="100" Margin="5" TextAlignment="Center" Text="Gold" VerticalAlignment="Center" />
        </Border>
        <Border Grid.Column="1" Grid.Row="7" BorderThickness="1,1,1,1" BorderBrush="Black" Margin="0,0,10,10">
            <TextBlock x:Name="lblGold" Width="100" Margin="5" TextAlignment="Center" Text="{Binding Path=GoldToString, Mode=OneWay}" VerticalAlignment="Center" />
        </Border>
        <Button x:Name="btnBack" Grid.Column="0" Grid.Row="9" Grid.ColumnSpan="2" Width="100" Height="30" Margin="10" Content="_Back" Click="btnBack_Click" IsCancel="True" />
        <StackPanel Grid.Column="2" Grid.Row="0" Grid.RowSpan="10" Margin="5">
            <GroupBox HorizontalAlignment="Left" VerticalAlignment="Top" Width="270" Header="Weapon">
                <StackPanel>
                    <TextBlock x:Name="lblEquippedWeapon" Width="250" Margin="5" Text="{Binding Path=Name, Mode=TwoWay}" />
                    <TextBlock x:Name="lblEquippedWeaponDamage" Width="250" Margin="5" Text="{Binding Path=DamageToStringWithText, Mode=OneWay}" />
                </StackPanel>
            </GroupBox>
            <GroupBox HorizontalAlignment="Left" VerticalAlignment="Top" Width="270" Header="Head">
                <StackPanel>
                    <TextBlock x:Name="lblEquippedHead" Width="250" Margin="5" Text="{Binding Path=Name, Mode=TwoWay}" />
                    <TextBlock x:Name="lblEquippedHeadDefense" Width="250" Margin="5" Text="{Binding Path=DefenseToStringWithText, Mode=OneWay}" />
                </StackPanel>
            </GroupBox>
            <GroupBox HorizontalAlignment="Left" VerticalAlignment="Top" Width="270" Header="Body">
                <StackPanel>
                    <TextBlock x:Name="lblEquippedBody" Width="250" Margin="5" Text="{Binding Path=Name, Mode=TwoWay}" />
                    <TextBlock x:Name="lblEquippedBodyDefense" Width="250" Margin="5" Text="{Binding Path=DefenseToStringWithText, Mode=OneWay}" />
                </StackPanel>
            </GroupBox>
            <GroupBox HorizontalAlignment="Left" VerticalAlignment="Top" Width="270" Header="Legs">
                <StackPanel>
                    <TextBlock x:Name="lblEquippedLegs" Width="250" Margin="5" Text="{Binding Path=Name, Mode=TwoWay}" />
                    <TextBlock x:Name="lblEquippedLegsDefense" Width="250" Margin="5" Text="{Binding Path=DefenseToStringWithText, Mode=OneWay}" />
                </StackPanel>
            </GroupBox>
            <GroupBox HorizontalAlignment="Left" VerticalAlignment="Top" Width="270" Header="Feet" Margin="0,0,5,5">
                <StackPanel>
                    <TextBlock x:Name="lblEquippedFeet" Width="250" Margin="5" Text="{Binding Path=Name, Mode=TwoWay}" />
                    <TextBlock x:Name="lblEquippedFeetDefense" Width="250" Margin="5" Text="{Binding Path=DefenseToStringWithText, Mode=OneWay}" />
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</Window>