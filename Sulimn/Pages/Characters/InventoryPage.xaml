                    <GroupBox Grid.Column="2" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top"
                              Width="270" Height="340" Header="Selected Ring" Margin="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <TextBlock x:Name="LblSelectedRing" Grid.Row="0" Width="250" Margin="5"
                                       Text="{Binding Path=Name}" />
                            <TextBlock x:Name="LblSelectedRingBonus" Grid.Row="1" Margin="5" Width="250"
                                       Text="{Binding Path=BonusToString}" />
                            <TextBlock x:Name="LblSelectedRingValue" Grid.Row="2"
                                       Text="{Binding Path=ValueToStringWithText}" Margin="5" />
                            <TextBlock x:Name="LblSelectedRingSellable" Grid.Row="3"
                                       Text="{Binding Path=CanSellToString}" Margin="5" />
                            <TextBlock x:Name="LblSelectedRingDescription" Grid.Row="4"
                                       Text="{Binding Path=Description}" TextWrapping="Wrap" Margin="5" />
                            <Grid Grid.Row="5" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Button x:Name="BtnEquipSelectedRingLeft" Grid.Column="0" Grid.Row="0" Width="110" Content="Equip _Left" Click="BtnEquipSelectedRingLeft_Click" IsEnabled="False" Margin="5" />
                                <Button x:Name="BtnEquipSelectedRingRight" Grid.Column="1" Grid.Row="0" Width="110" Content="Equip _Right" Click="BtnEquipSelectedRingRight_Click" IsEnabled="False" Margin="5" />
                                <Button x:Name="BtnDropSelectedRing" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Width="100"  Content="_Drop" Click="BtnDropSelectedRing_Click" IsEnabled="False" Margin="5" />
                            </Grid>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="Potions" Padding="10,5">
                <Grid HorizontalAlignment="Right">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <GroupBox Grid.Column="0" Grid.Row="0" Header="Inventory" Margin="0,5,5,5">
                        <ListBox x:Name="LstPotionInventory" Width="265" Height="300" ItemsSource="{Binding}"
                                 SelectionChanged="LstPotionInventory_SelectionChanged"
                                 ScrollViewer.VerticalScrollBarVisibility="Visible" Margin="5" />
                    </GroupBox>
                    <GroupBox Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top"
                              Width="270" Height="340" Header="Selected Potion" Margin="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <TextBlock x:Name="LblSelectedPotion" Grid.Row="0" Width="250" Text="{Binding Path=Name}"
                                       Margin="5" />
                            <TextBlock x:Name="LblSelectedPotionTypeAmount" Grid.Row="1" Width="250"
                                       Text="{Binding Path=TypeAmount}" Margin="5" />
                            <TextBlock x:Name="LblSelectedPotionValue" Grid.Row="2"
                                       Text="{Binding Path=ValueToStringWithText}" Margin="5" />
                            <TextBlock x:Name="LblSelectedPotionSellable" Grid.Row="3"
                                       Text="{Binding Path=CanSellToString}" Margin="5" />
                            <TextBlock x:Name="LblSelectedPotionDescription" Grid.Row="4"
                                       Text="{Binding Path=Description}" TextWrapping="Wrap" Margin="5" />
                            <StackPanel Grid.Row="5" Orientation="Horizontal" VerticalAlignment="Bottom"
                                        HorizontalAlignment="Center">
                                <Button x:Name="BtnConsumeSelectedPotion" Width="100" Content="_Consume" Click="BtnConsumeSelectedPotion_Click" IsEnabled="False" Margin="5" />
                                <Button x:Name="BtnDropSelectedPotion" Width="100" Content="_Drop" Click="BtnDropSelectedPotion_Click" IsEnabled="False" Margin="5" />
                            </StackPanel>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="Food" Padding="10,5">
                <Grid HorizontalAlignment="Right">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <GroupBox Grid.Column="0" Grid.Row="0" Header="Inventory" Margin="5">
                        <ListBox x:Name="LstFoodInventory" Width="265" Height="300" ItemsSource="{Binding}"
                                 SelectionChanged="LstFoodInventory_SelectionChanged"
                                 ScrollViewer.VerticalScrollBarVisibility="Visible" Margin="5" />
                    </GroupBox>
                    <GroupBox Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top"
                              Width="270" Height="340" Header="Selected Food" Margin="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <TextBlock x:Name="LblSelectedFood" Grid.Row="0" Width="250" Text="{Binding Path=Name}"
                                       Margin="5" />
                            <TextBlock x:Name="LblSelectedFoodTypeAmount" Grid.Row="1" Width="250"
                                       Text="{Binding Path=TypeAmount}" Margin="5" />
                            <TextBlock x:Name="LblSelectedFoodValue" Grid.Row="2"
                                       Text="{Binding Path=ValueToStringWithText}" Margin="5" />
                            <TextBlock x:Name="LblSelectedFoodSellable" Grid.Row="3"
                                       Text="{Binding Path=CanSellToString}" Margin="5" />
                            <TextBlock x:Name="LblSelectedFoodDescription" Grid.Row="4"
                                       Text="{Binding Path=Description}" TextWrapping="Wrap" Margin="5" />
                            <StackPanel Grid.Row="5" Orientation="Horizontal" VerticalAlignment="Bottom"
                                        HorizontalAlignment="Center">
                                <Button x:Name="BtnConsumeSelectedFood" Width="100" Content="_Consume" Click="BtnConsumeSelectedFood_Click" IsEnabled="False" Margin="5" />
                                <Button x:Name="BtnDropSelectedFood" Width="100" Content="_Drop" Click="BtnDropSelectedFood_Click" IsEnabled="False" Margin="5" />
                            </StackPanel>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
        </TabControl>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Column="0" Grid.Row="1"
                    Margin="0,0,0,10">
            <TextBlock x:Name="LblHealth" Width="281" Text="{Binding Path=HealthToStringWithText}"
                       TextAlignment="Center" Margin="0,0,10,0" />
            <TextBlock x:Name="LblMagic" Width="281" Text="{Binding Path=MagicToStringWithText}" TextAlignment="Center"
                       Margin="0,0,10,0" />
            <TextBlock x:Name="LblGold" Width="281" Text="{Binding Path=GoldToStringWithText}" TextAlignment="Center" />
        </StackPanel>
        <TextBox x:Name="TxtInventory" Grid.Row="2" Height="120" Width="863" IsReadOnly="True"
                 TextWrapping="Wrap" ScrollViewer.VerticalScrollBarVisibility="Visible"   Margin="0,0,0,10" />
        <Button x:Name="BtnBack" Grid.Row="3" Width="140" Content="_Back" Click="BtnBack_Click"
                IsCancel="True" />
    </Grid>
</Page>