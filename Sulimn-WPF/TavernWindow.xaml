<Window x:Name="windowTavern" x:Class="Sulimn_WPF.TavernWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sulimn_WPF"
        mc:Ignorable="d"
        Title="Tavern" Height="289" Width="502" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" FontFamily="Segoe UI Semibold" FontSize="17" Closing="windowTavern_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="210" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <TextBox x:Name="txtTavern" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" Margin="5" />
        <Button x:Name="btnBlackjack" Grid.Column="0" Grid.Row="1" Width="125" Content="_Blackjack" Click="btnBlackjack_Click" Margin="5" />
        <Button x:Name="btnDrink" Grid.Column="1" Grid.Row="1" Width="125" Content="Buy _Drink" Click="btnFood_Click" Margin="5" />
        <Button x:Name="btnExit" Grid.Column="2" Grid.Row="1" Width="125" Content="_Exit" Click="btnExit_Click" Margin="5" />
    </Grid>
</Window>